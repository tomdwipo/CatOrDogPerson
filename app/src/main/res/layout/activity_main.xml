<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"

    android:background="#ff5e77">

    <ScrollView
        android:id="@+id/scrollView"
        android:background="#ffdce6"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="390dp"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Are you afraid of Canine ?"
                android:id="@+id/canineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:id="@+id/canineGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radioCanineNo"
                    android:text="No"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/radioCanineYes"
                    android:text="Yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
            <TextView
                android:padding="10dp"
                android:text="On a scale of 1 to 10 how confortable are you around felines?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/seekbarFeline"
                android:max="10"
                android:layout_gravity="center_horizontal"
                android:layout_width="230dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/seekbarProgressTextView"
                android:text="Comfortableness: 0/10"
                android:paddingBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Which ones are the cutest?"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/checkboxCuteDog"
                android:text="Dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/checkboxCuteCat"
                android:text="Cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/checkboxCuteChicken"
                android:text="Chicken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"/>

            <TextView
                android:id="@+id/droolTextView"
                android:text="Are you oke with creatures that drool?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/radioGroupDrool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/droolNo"
                    android:text="No"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <RadioButton
                    android:id="@+id/droolyes"
                    android:text="Yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>


        </LinearLayout>
    </ScrollView>
    <Button
        android:text="show result"
        android:layout_below="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:id="@+id/showResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
